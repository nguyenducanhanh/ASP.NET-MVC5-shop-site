
@{
    ViewBag.Title = "Thanh toán trực tuyến";
    Layout = "~/Views/Shared/View1.cshtml";
}
<div style="height: 500px; width: 300px; border: 1px solid; border-color:lightgray;border-radius:10px;">
    <br />
    <b style="font-size:22px;margin-top:10px;margin-left:20px;">Thông tin đơn hàng</b>
    <p style="font-size:19px;margin-top:20px;margin-left:20px;">Mã đơn hàng: <br /><br /><b> @BAITAPLON.Models.DH.iddh</b></p>
    <hr style="width:85%;margin-left:20px;" />
    <p style="font-size:19px;margin-top:20px;margin-left:20px;">Mô tả:<br /><br /><b> Thanh toán đơn hàng @BAITAPLON.Models.DH.iddh</b></p>
    <hr style="width:85%;margin-left:20px;" />
    <p style="font-size:19px;margin-top:20px;margin-left:20px;">Số tiền:<br /><br /><b style="font-size:24px;"> @BAITAPLON.Models.Cart.items.Sum(s => s._shopping_product.GiaBanMoi * s._shopping_quantity) VNĐ</b></p>
    <a style="height:40px;width:80px;margin-left:20px;margin-top:100px;" class="btn btn-xs btn-info "  href="~/GioHang/ShowToCart">Quay lại</a>
</div>

<div style="background: url(https://static.mservice.io/jk/momo2020/img/intro/qrcode-pattern.png) 10px 10px no-repeat, linear-gradient(0deg, #c1177c, #e11b90); padding-bottom: 5%; height: 500px; width: 500px; border-radius: 10px; margin-right: 250px; ">
    <div style="display: block; text-align: center;">
        <p style="display: inline-block;font-size:20px;margin-top:20px;margin-bottom:40px;color:white;">Quét mã QR để thanh toán</p>
    </div>
    <div style="display:block;text-align:center;">
        <img style="height: 300px; width: 300px" src="~/Theme/images/qrcode.jpg" />
    </div>
    <div style="display: block; text-align: center;">
        <p style="display: inline-block; font-size: 20px; width: 370px; margin-top: 40px; margin-bottom: 20px; color: white;"><i style="margin-right:5px;" class="fa fa-qrcode" aria-hidden="true"></i>Sử dụng App TPBank hoặc ứng dụng camera hỗ trợ QR code để quét mã</p>
    </div>
</div>

