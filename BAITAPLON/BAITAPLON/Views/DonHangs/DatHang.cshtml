@model BAITAPLON.Models.DonHang

@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/View1.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="formdh">
    <h2>THÔNG TIN KHÁCH HÀNG</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container">
        <div class="box">
            <p class="lb">Tên khách hàng<span class="sp">*</span></p>
            <div class="input">
                @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="box">
            <p class="lb">Giới tính<span class="sp">*</span></p>
            <div class="input">
                @Html.EditorFor(model => model.GT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GT, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="box">
            <p class="lb">Số điện thoại<span class="sp">*</span></p>
            <div class="input">
                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="box">
            <p style="width:500px;">Cách nhận hàng<span class="sp">* (ghi rõ địa chỉ nhận hàng nếu khách muốn giao hàng tận nơi)</span></p>
            <div class="input">
                @Html.EditorFor(model => model.CachNhan, new { htmlAttributes = new { @style = "width:520px;height:50px;" } })
                @Html.ValidationMessageFor(model => model.CachNhan, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div>
        <input type="submit" onclick="hello()" value="Xác nhận" class="dh" />
    </div>
    <a style="height:40px;width:80px;" class="btn btn-xs btn-info " href="~/GioHang/ShowToCart">Quay lại</a>
</div>
<script>

        function hello() {
              alert("đặt hàng thành công ");
              
        }
</script>
}
