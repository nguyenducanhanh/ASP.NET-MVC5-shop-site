@model IEnumerable<BAITAPLON.Models.CTDonHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/conga.cshtml";
}

<h2>Chi tiết đơn hàng</h2>

<table class="table">
    <tr>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Giá
        </th>
        <th></th>
    </tr>

@foreach (var item in BAITAPLON.Areas.Admin.Data.iddh.ct)
{
    
    <tr>
        <td>
            @item.id
        </td>
        <td>
            @item.sl
        </td>
        <td>
            @item.gia
        </td>
        <td>
            <div style="vertical-align: middle; display: inline-grid; height: 40px; width: 80px; background-color: violet; border-radius: 6px; text-align: center; align-items: center;">  @Html.ActionLink("Hủy đặt", "xoa", new { id = item.id })</div>
        </td>
    </tr>
    
}
</table>
<a style="height:40px;width:100px" class="btn btn-xs btn-info " href="~/Admin/DonHangs/Index">
    Quay lại
</a>
