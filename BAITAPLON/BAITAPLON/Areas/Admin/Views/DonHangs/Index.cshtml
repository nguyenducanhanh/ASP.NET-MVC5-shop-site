@model IEnumerable<BAITAPLON.Models.DonHang>

@{
    ViewBag.Title = "Đơn Hàng Index";
    Layout = "~/Areas/Admin/Views/Shared/conga.cshtml";
}
<br />

<h2>Thông tin các đơn Hàng</h2>



<table class="table">
    <tr>
        <th>
            Tên Khách Hàng
        </th>
        <th>
            SĐT Liên Hệ
        </th>
        <th>
            Giới Tính
        </th>
        <th>
            Phương thức nhận hàng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CachNhan)
            </td>
            <td>
                <div style="vertical-align: middle; display: inline-grid; height: 40px; width: 80px; background-color: greenyellow; border-radius: 6px; text-align: center; align-items: center;">
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ID })</div> |
                                <a style="height:40px;width:80px" class="btn btn-xs btn-info " href="@Url.Action("ChitietDH", "DonHangs", new { id = item.ID })">Chi tiết</a> |
                                <div style="vertical-align: middle; display: inline-grid; height: 40px; width: 80px; background-color: orange; border-radius: 6px; text-align: center; align-items: center;"> @Html.ActionLink("Xóa", "Delete", new { id = item.ID })</div>
</td>
        </tr>
    }

</table>
