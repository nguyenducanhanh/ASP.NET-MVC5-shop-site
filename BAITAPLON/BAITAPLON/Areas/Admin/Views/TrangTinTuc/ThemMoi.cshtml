@model BAITAPLON.Models.TinTuc

@{
    ViewBag.Title = "ThemMoi";
    Layout = "~/Areas/Admin/Views/Shared/conga.cshtml";
}


<h2>Thêm Tin Mới </h2>

<p>
    <a class="btn btn-danger" href="~/Admin/TrangTinTuc/DanhSach">  Danh Sách Tin Tức</a>
</p>


<div>
    @using (Html.BeginForm("ThemMoi", "TrangTinTuc", FormMethod.Post, new { enctype = "multipart/form-data" }))  // ảnh
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
